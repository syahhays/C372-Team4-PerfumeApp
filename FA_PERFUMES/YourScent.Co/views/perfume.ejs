<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= perfume.perfumeName %> | YourScent.co</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: #f7f8fb;
      color: #1a1a1a;
    }
    .page {
      max-width: 1200px;
      margin: 32px auto;
      padding: 0 16px 48px;
    }
    .hero-card {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
      padding: 32px;
      min-height: 360px;
    }
    .img-panel img {
      width: 100%;
      border-radius: 12px;
      object-fit: contain;
      background: #eef2f7;
    }
    .tag {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 999px;
      font-size: 0.8rem;
      font-weight: 600;
      background: #f2e9ff;
      color: #7c00ff;
    }
    .price {
      color: #7c00ff;
      font-weight: 700;
      font-size: 1.6rem;
      margin: 12px 0 8px;
    }
    .stock {
      font-weight: 600;
      color: #1f1f1f;
      margin-bottom: 16px;
    }
    .note-label {
      font-weight: 600;
      margin-top: 16px;
      margin-bottom: 6px;
    }
    .pill {
      display: inline-block;
      padding: 6px 10px;
      border-radius: 999px;
      background: #eef0f4;
      font-size: 0.85rem;
      margin: 4px 6px 4px 0;
    }
    .qty-row {
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 16px 0;
    }
    .cta-btn {
      background: #a000ff;
      color: #fff;
      border: none;
      border-radius: 999px;
      padding: 12px;
      font-weight: 600;
      width: 100%;
    }
    .cta-btn:hover {
      background: #8900d8;
      color: #fff;
    }
    .breadcrumb-link {
      color: #7c00ff;
      text-decoration: none;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      margin-bottom: 12px;
    }
    .fav-btn {
      border: 1px solid #e5e5e5;
      background: #fff;
      border-radius: 999px;
      width: 40px;
      height: 40px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: #a000ff;
      transition: all 0.2s ease;
    }
    .fav-btn:hover {
      border-color: #a000ff;
      box-shadow: 0 4px 10px rgba(160, 0, 255, 0.15);
    }
    /* Star rating styles */
    .star-rating { display: inline-flex; gap: 4px; align-items: center; flex-direction: row-reverse; }
    .star-rating input { display: none; }
    .star-rating label { cursor: pointer; font-size: 1.25rem; color: #ddd; transition: color .12s ease; }
    .star-rating label:hover,
    .star-rating label:hover ~ label { color: #f39c12; }
    .star-rating input:checked ~ label { color: #f39c12; }
    .star-rating label.selected { color: #f39c12; }
  </style>
</head>
<body>
  <div class="page">
    <% if (user && user.role === 'admin') { %>
      <a class="breadcrumb-link" href="/inventory">&#8592; Back to Products</a>
    <% } else { %>
      <a class="breadcrumb-link" href="/shopping">&#8592; Back to Products</a>
    <% } %>
    <div class="hero-card">
      <div class="row g-4">
        <div class="col-lg-6 img-panel">
          <img src="/images/<%= perfume.image %>" alt="<%= perfume.perfumeName %>" />
        </div>
        <div class="col-lg-6">
          <div class="d-flex align-items-center justify-content-between mb-2">
            <h2 class="mb-0"><%= perfume.perfumeName %></h2>
            <div class="d-flex align-items-center gap-2">
              <% if (perfume.gender) { %>
                <span class="tag"><%= perfume.gender %></span>
              <% } %>
              <button type="button" class="fav-btn" aria-label="Add to favourites">
                &#9829;
              </button>
            </div>
          </div>

          <div class="price">$<%= Number(perfume.price || 0).toFixed(2) %></div>
          <p><%= perfume.perfumeDescription %></p>
          <div class="stock"><%= perfume.quantity %> in stock</div>

          <% const notes = (perfume.perfumeNotes || '').split(',').map(n => n.trim()).filter(Boolean); %>
          <% if (notes.length) { %>
            <div class="note-label">Notes</div>
            <div>
              <% notes.forEach(n => { %>
                <span class="pill"><%= n %></span>
              <% }) %>
            </div>
          <% } %>

          <form class="mt-3">
            <div class="qty-row">
              <label for="qty" class="form-label mb-0">Quantity:</label>
              <input id="qty" type="number" min="1" max="<%= perfume.quantity %>" value="1" class="form-control" style="max-width: 100px;" />
            </div>
            <button type="button" class="cta-btn">Add to Cart</button>
          </form>
          
          <!-- Reviews -->
          <div class="mt-4">
            <h5>Reviews</h5>
            <% const revs = typeof reviews !== 'undefined' ? reviews : []; %>
            <% if (revs.length === 0) { %>
              <p class="text-muted">No reviews yet. Be the first to review!</p>
            <% } else { %>
              <% revs.forEach(r => { %>
                <div class="border rounded p-2 mb-2">
                  <div class="d-flex align-items-start">
                    <div style="font-weight:700"><%= r.username %></div>
                    <div class="ms-3 text-warning" style="font-weight:700">⭐ <%= r.rating %>/5</div>
                    <div class="ms-auto text-muted" style="font-size:0.85rem"><%= new Date(r.created_at).toLocaleDateString() %></div>
                  </div>
                  <% if (r.comment) { %>
                    <div class="mt-2"><%= r.comment %></div>
                  <% } %>
                  <% if (user && user.role === 'admin') { %>
                    <div class="mt-2 text-end">
                      <form method="POST" action="/review/<%= r.reviewId %>/delete" onsubmit="return confirm('Delete this review?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                      </form>
                    </div>
                  <% } %>
                </div>
              <% }) %>
            <% } %>
          </div>

          <!-- Leave a review (only for logged in users) -->
          <% if (user) { %>
            <div class="mt-3">
              <h6>Leave a review</h6>
              <form method="POST" action="/perfume/<%= perfume.perfumeId %>/review">
                <div class="mb-2">
                  <label class="form-label">Rating</label>
                  <div class="star-rating" role="radiogroup" aria-label="Rating">
                    <input type="radio" id="star5" name="rating" value="5" checked />
                    <label for="star5" title="5 stars">★</label>
                    <input type="radio" id="star4" name="rating" value="4" />
                    <label for="star4" title="4 stars">★</label>
                    <input type="radio" id="star3" name="rating" value="3" />
                    <label for="star3" title="3 stars">★</label>
                    <input type="radio" id="star2" name="rating" value="2" />
                    <label for="star2" title="2 stars">★</label>
                    <input type="radio" id="star1" name="rating" value="1" />
                    <label for="star1" title="1 star">★</label>
                  </div>
                </div>
                <div class="mb-2">
                  <label for="comment" class="form-label">Comment</label>
                  <textarea id="comment" name="comment" class="form-control" rows="3" placeholder="Share your thoughts..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Review</button>
              </form>
            </div>
          <% } else { %>
            <div class="mt-3 text-muted">Please <a href="/login">log in</a> to leave a review.</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
