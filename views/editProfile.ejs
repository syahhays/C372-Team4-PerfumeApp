<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile | perfume.co</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> 
    <style>
        body {
            background: #f7f3f8;
            font-family: 'Poppins', sans-serif;
        }
        .profile-card {
            max-width: 650px;
            margin: 60px auto;
            padding: 30px;
            background: white;
            border-radius: 18px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        }
        .form-control {
            border-radius: 12px;
            padding: 12px;
        }
        .btn-main {
            background-color: #d6b2e3;
            border: none;
            padding: 12px 20px;
            border-radius: 12px;
            font-weight: 600;
        }
        .btn-main:hover {
            background-color: #c79ed7;
        }
        .btn-secondary-custom {
            background-color: #e9e4ee;
            border: none;
            border-radius: 12px;
            padding: 10px 18px;
        }
        .btn-secondary-custom:hover {
            background-color: #dbd3e6;
        }
    </style>
</head>
<body>

    <div class="profile-card">
        <h3 class="text-center mb-3">Edit Profile</h3>
        <p class="text-center text-muted mb-4">Update your profile details</p>

        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <% if (success && success.length > 0) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <form action="/editProfile" method="POST">

            <!-- Username (not editable) -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Username</label>
                <input type="text" class="form-control" value="<%= user.username %>" disabled>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" name="email" class="form-control" required value="<%= user.email %>">
            </div>

            <!-- Contact -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Contact Number</label>
                <input type="text" name="contact" class="form-control" required value="<%= user.contact %>">
            </div>

            <!-- Password (initially disabled) -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input type="password" id="password" name="password" class="form-control" 
                       value="<%= user.password %>" disabled>
            </div>

            <!-- Confirm Password (hidden initially) -->
            <div class="mb-3 d-none" id="confirmPasswordDiv">
                <label class="form-label fw-semibold">Confirm Password</label>
                <input type="password" id="confirmPassword" class="form-control" placeholder="Re-enter new password">
                <small id="passMsg" class="text-danger d-none">Passwords do not match</small>
            </div>

            <!-- Change Password Button -->
            <div class="mb-3">
                <button type="button" class="btn btn-secondary-custom w-100" id="changePasswordBtn">
                    Change Password
                </button>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="/profile" class="btn btn-secondary-custom">Cancel</a>
                <button type="submit" class="btn btn-main">Save Changes</button>
            </div>
        </form>
    </div>

<script>
    const changePasswordBtn = document.getElementById("changePasswordBtn");
    const passwordInput = document.getElementById("password");
    const confirmDiv = document.getElementById("confirmPasswordDiv");
    const confirmPassword = document.getElementById("confirmPassword");
    const passMsg = document.getElementById("passMsg");

    let passwordChanged = false;

    changePasswordBtn.addEventListener("click", () => {
        passwordInput.disabled = false;
        confirmDiv.classList.remove("d-none");
        passwordInput.value = ""; // clear old password if editing
        passwordChanged = true;
        confirmPassword.value = "";
    });

    // Confirm password check
    confirmPassword.addEventListener("input", () => {
        if (confirmPassword.value !== passwordInput.value) {
            passMsg.classList.remove("d-none");
        } else {
            passMsg.classList.add("d-none");
        }
    });

    // Optional: if password not changed, keep old value
    document.querySelector("form").addEventListener("submit", (e) => {
        if (!passwordChanged) {
            passwordInput.value = "<%= user.password %>";
        }
    });
</script>

</body>
</html>