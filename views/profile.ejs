<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YourScent.co - Profile</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f7f8fb;
            color: #1a1a1a;
        }

        .profile-card {
            max-width: 600px;
            margin: 50px auto;
            border-radius: 20px;
            background: white;
            padding: 30px;
            box-shadow: 0 6px 25px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .profile-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 25px;
        }

        .profile-header h2 {
            font-weight: 700;
        }

        .icon-circle {
            width: 100px;
            height: 100px;
            background: #f0e1ff;
            color: #7c00ff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 45px;
            margin: 0 auto 15px auto;
        }

        .user-info .field {
            display: flex;
            justify-content: flex-start;
            gap: 10px; /* spacing between label and value */
            margin-bottom: 12px;
            font-size: 1rem;
            align-items: center;
        }

        .user-info .field p {
            margin: 0;
            font-weight: 500;
        }

        .btn-primary-soft {
            background: #a000ff;
            border: none;
        }
        .btn-primary-soft:hover {
            background: #8900d8;
        }

        .btn-outline-dark {
            border-radius: 12px;
            padding: 4px 10px;
            font-size: 0.85rem;
        }

    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('partials/customerNavbar') %>

    <div class="container mt-5 mb-5">

        <!-- Flash Messages -->
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success text-center"><%= success %></div>
        <% } %>
        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger text-center"><%= error %></div>
        <% } %>

        <div class="profile-card">
            <div class="profile-header">
                <div class="icon-circle">
                    <i class="fa fa-user"></i>
                </div>
                <h2>Your Profile</h2>
            </div>

            <div class="user-info">
                <div class="field">
                    <p><strong>Username:</strong></p>
                    <p><%= user.username %></p>
                </div>

                <div class="field">
                    <p><strong>Email:</strong></p>
                    <p><%= user.email %></p>
                </div>

                <div class="field">
                    <p><strong>Contact:</strong></p>
                    <p><%= user.contact %></p>
                </div>

                <div class="field">
                    <p><strong>Role:</strong></p>
                    <p><%= user.role %></p>
                </div>

                <div class="field">
                    <p><strong>Password:</strong></p>
                    <p id="passwordText"><%= "••••••••" %></p>
                    <button class="btn btn-outline-dark ms-2" id="togglePasswordBtn" type="button">Show</button>
                </div>

                <div class="mt-3">
                    <a href="/editProfile" class="btn btn-primary-soft text-white w-100">
                        Edit Profile
                    </a>
                </div>
            </div>

            <hr>

            <div class="d-flex justify-content-between mt-4">
                <a href="/" class="btn btn-outline-dark">Back</a>
                <a href="/logout" class="btn btn-primary-soft text-white">Logout</a>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>

    <script>
        const passwordText = document.getElementById("passwordText");
        const toggleButton = document.getElementById("togglePasswordBtn");

        const actualPassword = "<%= user.password %>"; // store actual password safely in JS variable
        let hidden = true;

        toggleButton.addEventListener("click", () => {
            if (hidden) {
                passwordText.textContent = actualPassword;
                toggleButton.textContent = "Hide";
            } else {
                passwordText.textContent = "••••••••";
                toggleButton.textContent = "Show";
            }
            hidden = !hidden;
        });
    </script>

</body>
</html>
