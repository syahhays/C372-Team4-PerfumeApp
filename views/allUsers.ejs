<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <title>YourScent.co - Users (Admin)</title>

    <style>
        body {
            background: #f7f8fb;
            color: #1a1a1a;
        }

        .table-container {
            background: #ffffff;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        }

        table thead th {
            background: #f2f4f8;
            font-weight: 600;
            font-size: 0.9rem;
        }

        table tbody tr:hover {
            background: #f9f7ff;
        }

        .role-badge {
            background: #f2e9ff;
            color: #7c00ff;
            border-radius: 999px;
            padding: 4px 10px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .status-pill {
            border-radius: 999px;
            padding: 5px 10px;
            font-size: 0.8rem;
            font-weight: 600;
            display: inline-block;
        }

        .status-active {
            background: #e6fffa;
            color: #047857;
        }

        .status-banned {
            background: #ffecec;
            color: #c1121f;
        }

        .btn-outline-soft {
            border: 1px solid #e3e3e3;
            color: #1a1a1a;
            background: #fff;
        }

        .btn-outline-soft:hover {
            border-color: #7c00ff;
            color: #7c00ff;
            background: #f7edff;
        }

        .btn-edit-soft {
            background: #e9f5ff;
            color: #0c5aa6;
            border: 1px solid #c8e4ff;
        }

        .btn-danger-soft {
            background: #ffecec;
            color: #c1121f;
            border: 1px solid #ffd4d4;
        }

        .action-btns {
            display: flex;
            gap: 6px;
            justify-content: center;
        }
    </style>
</head>
<body>
<% if (success && success.length > 0) { %>
    <div class="alert alert-success text-center"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
    <div class="alert alert-danger text-center"><%= error %></div>
<% } %>
<%- include('partials/adminNavbar') %>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="mb-0">User Management (Admin)</h2>
        <small class="text-muted">View and manage all registered users</small>
    </div>

    <form class="row g-2 mb-4" method="GET" action="/allUsers">
        <div class="col-md-6">
            <input
                type="text"
                name="search"
                class="form-control"
                placeholder="Search by username..."
                value="<%= search %>"
            >
        </div>
        <div class="col-md-3">
            <select name="sort" class="form-select">
                <option value="desc" <%= sort === 'desc' ? 'selected' : '' %>>
                    Newest First
                </option>
                <option value="asc" <%= sort === 'asc' ? 'selected' : '' %>>
                    Oldest First
                </option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">
                Search & Sort
            </button>
        </div>
    </form>

    <div class="table-container">
        <div class="table-responsive">
            <table class="table align-middle table-borderless">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Joined</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><strong><%= user.username %></strong></td>
                            <td class="text-muted"><%= user.email %></td>
                            <td><%= user.contact || 'No contact' %></td>
                            <td>
                                <span class="role-badge"><%= user.role %></span>
                            </td>
                            <td>
                                <% if (user.banned) { %>
                                    <span class="status-pill status-banned">Banned</span>
                                <% } else { %>
                                    <span class="status-pill status-active">Active</span>
                                <% } %>
                            </td>
                            <td class="text-muted">
                                <%= new Date(user.createdAt).toLocaleDateString() %>
                            </td>
                            <td>
                                <div class="action-btns">
                                    <a href="/admin/users/<%= user.userId %>" class="btn btn-outline-soft btn-sm">
                                        View
                                    </a>
                                    <a href="/admin/users/edit/<%= user.userId %>" class="btn btn-edit-soft btn-sm">
                                        Edit
                                    </a>

                                    <% if (!user.banned) { %>
                                        <a href="/banUser/<%= user.userId %>" class="btn btn-danger-soft btn-sm" onclick="confirm('are you sure you want to ban this user?')">
                                            Ban
                                        </a>
                                    <% } else { %>
                                        <a href="/unbanUser/<%= user.userId %>" class="btn btn-outline-soft btn-sm" onclick="confirm('are you sure you want to unban this user?')">
                                            Unban
                                        </a>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>
</html>
