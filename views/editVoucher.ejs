<!DOCTYPE html>
<html>
<head>
    <title>Edit Voucher</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <%- include('partials/adminNavbar') %>

    <div class="container mt-4">
        <h2>Edit Voucher</h2>

        <form method="POST" action="/vouchers/edit/<%= voucher.voucherID %>">

            <div class="mb-3">
                <label class="form-label">Code</label>
                <input type="text" required name="code" class="form-control"
                    value="<%= voucher.code %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control"><%= voucher.description %></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Discount Type</label>
                <select name="discountType" class="form-select">
                    <option value="percentage" <%= voucher.discountType === 'percentage' ? 'selected' : '' %>>Percentage (%)</option>
                    <option value="fixed" <%= voucher.discountType === 'fixed' ? 'selected' : '' %>>Fixed Amount ($)</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Discount Value</label>
                <input type="number" required name="discountValue" step="0.01" class="form-control"
                    value="<%= voucher.discountValue %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Expiry Date</label>
                <input type="date" required name="expiryDate" class="form-control"
                    value="<%= new Date(voucher.expiryDate).toISOString().slice(0,10) %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Usage Limit</label>
                <input type="number" required name="usageLimit" class="form-control"
                    value="<%= voucher.usageLimit %>">
            </div>

            <button class="btn btn-primary">Update Voucher</button>
        </form>

    </div>

</body>
</html>